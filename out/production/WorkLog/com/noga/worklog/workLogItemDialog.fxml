<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="com.noga.worklog.DialogController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>

    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Data: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Hours: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="hours" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Wage: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="wages" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <CheckBox fx:id="checkBoxButton" selected="true" text="Add Notes" textAlignment="JUSTIFY" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#onButtonClicked"/>

            <Label text="Notes: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="notes" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
